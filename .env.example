# ================================================
# Engineering Manager MCP Server Configuration
# ================================================
# Copy this file to .env and fill in your values

# ================================================
# JIRA CONFIGURATION (REQUIRED)
# ================================================
# Your Atlassian instance URL (without trailing slash)
# Example: https://yourcompany.atlassian.net
JIRA_BASE_URL=

# Email associated with your Jira account
# Example: john.doe@company.com
JIRA_EMAIL=

# Jira API token (not your password!)
# Get it from: https://id.atlassian.com/manage/api-tokens
JIRA_API_TOKEN=

# ================================================
# SLACK CONFIGURATION (OPTIONAL)
# ================================================
# Slack Bot User OAuth Token
# Get it from: https://api.slack.com/apps -> OAuth & Permissions
# Should start with xoxb-
SLACK_BOT_TOKEN=

# ================================================
# ENVIRONMENT CONFIGURATION
# ================================================
# Environment mode: development | production
NODE_ENV=production

# Enable debug logging: true | false
DEBUG=false

# ================================================
# ADVANCED CONFIGURATION (OPTIONAL)
# ================================================
# Cache TTL in seconds (default: 600)
# CACHE_TTL=600

# Maximum cache size (default: 100)
# CACHE_MAX_SIZE=100

# Days to consider an issue stale (default: 2)
# DEFAULT_STALE_DAYS=2

# API timeout in milliseconds (default: 30000)
# API_TIMEOUT=30000

# Retry attempts for failed API calls (default: 3)
# RETRY_ATTEMPTS=3

# Initial retry delay in milliseconds (default: 1000)
# RETRY_DELAY=1000
